<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VirgoBookView">
        <attr name="bookTextSize" format="dimension" />
        <attr name="bookTextColor" format="color|reference" />
        <attr name="bgColor" format="color|reference" />
        <attr name="bookDividerHeight" format="dimension|reference" />
        <attr name="padValue" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="VirgoLrcView">
        <attr name="lrcTextSizeMain" format="dimension" />
        <attr name="lrcTextSizeSec" format="dimension" />
        <attr name="lrcTextColorMain" format="color|reference" />
        <attr name="lrcTextColorSec" format="color|reference" />
        <attr name="lrcDividerHeight" format="dimension|reference" />
        <attr name="lrcpadValue" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="VirgoDrawableTextView">
        <attr name="drawableSrc" format="reference"/>
        <attr name="drawableHeight" format="dimension"/>
        <attr name="drawableWidth" format="dimension"/>
        <attr name="drawableLocation">
            <enum name="left" value="1"/>
            <enum name="top" value="2"/>
            <enum name="right" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleProcessBar">
        <attr name="cbBackColor" format="color|reference" />
        <attr name="cbFrontColor" format="color|reference" />
        <attr name="cbTextColor" format="color|reference" />
        <attr name="cbTextSize" format="dimension|reference" />
        <attr name="cbRadius" format="dimension|reference" />
        <attr name="cbStrokeWidth" format="dimension|reference" />
        <attr name="cbProcess" format="integer" />
        <attr name="cbMax" format="integer" />
        <attr name="cbAddText" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="VirgoPickerView">
        <attr name="isLoop" format="boolean" />
        <attr name="mainColor" format="color|reference" />
        <attr name="secondColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="VirgoImagePlayer">
        <attr name="dotSize" format="dimension|reference"/>
        <attr name="dotMargin" format="dimension|reference"/>
        <attr name="duration" format="integer"/>
        <attr name="addDot" format="boolean"/>
        <attr name="dotFocus" format="reference"/>
        <attr name="dotUnFocus" format="reference"/>
    </declare-styleable>
</resources>