<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"> <!--背景颜色-->
        <shape>
            <corners android:radius="1dp"/>
            <solid android:color="@color/colorGray"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress"> <!--滑块颜色: 若另设置样式，则被覆盖-->
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <solid android:color="@color/colorTY_Half" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress"> <!--进度条颜色-->
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <!--0从左到右，90表示从下到上，数值为45的整数倍；-->
                <gradient
                    android:angle="0"
                    android:startColor="#4FFEB8"
                    android:endColor="#924DF3"/>
            </shape>
        </clip>
    </item>
</layer-list>